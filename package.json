{
  "name": "planificapro-gestion-presupuesto",
  "version": "2.0.0",
  "description": "PLANIFICAPRO - Sistema profesional de gesti√≥n financiera personal",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "cd backend && pnpm run dev",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:windows": "cmd /c iniciar-desarrollo.bat",
    "install:all": "pnpm install && cd backend && pnpm install && cd ../frontend && pnpm install",
    "start": "node backend/server.js",
    "build": "echo 'Static files ready for deployment'",
    "vercel-build": "echo 'No build step needed - using static files'",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "presupuesto",
    "finanzas",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "AIDORA28",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.2",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3"
  }
}
