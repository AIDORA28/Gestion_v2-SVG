{
  "version": 2,
  "name": "planificapro-clean",
  "functions": {
    "api/backend.js": {
      "runtime": "@vercel/node@2.15.0"
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/backend"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
